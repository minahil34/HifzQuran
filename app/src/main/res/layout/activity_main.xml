<?xml version="1.0"?>

    <LinearLayout android:padding="16dp" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="Student ID:" android:id="@+id/textViewStudentId"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="Student Name:" android:id="@+id/textViewStudentName"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="Student Age:" android:id="@+id/textViewStudentAge"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="Student Class:" android:id="@+id/textViewStudentClass"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="Sabaq: " android:id="@+id/textViewSabaq" android:textSize="18sp" android:layout_marginTop="16dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="Previous Sabaq:" android:id="@+id/textViewSabaqStatus1"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/editTextSabaqPara" android:hint="Enter Sabaq para "/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/editTextSabaqSurah" android:hint="Enter Sabaq surah"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/editTextSabaqVerse" android:hint="Enter Sabaq verse"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="Manzil: " android:id="@+id/textViewManzil" android:textSize="18sp" android:layout_marginTop="16dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="Previous Manzil:" android:id="@+id/textViewManzilStatus1"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/editTextManzilPara" android:hint="Enter Manzil para "/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="Sabaqi: " android:id="@+id/textViewSabaqi" android:textSize="18sp" android:layout_marginTop="16dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="Previous Sabaqi:" android:id="@+id/textViewSabaqiStatus1"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/editTextSabaqiPara" android:hint="Enter Sabai para "/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Assign" android:id="@+id/buttonAssignTask" android:layout_marginTop="16dp"/>

</LinearLayout>